<!-- 各管理平台的欢迎页面 -->
<style>
  #top_box {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
  }
  #top_bg {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;

    z-index: -10;
    background-position: center;
    background-size: cover;
    background-attachment: fixed;
    background-image: url(<%= global.configManager['urls.static'] %>/img/web/sybj.jpg);
  }
  #top_overlay {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: -9;
    opacity: 0.68;
    background: #333333;
  }
</style>

<div id="top_box">
  <div id="top_bg"></div>
  <div id="top_overlay"></div>

  <div id="header-box" style="color: #fff">
    <img
      id="avatar_img"
      src="<%= global.configManager['urls.static'] %>/img/logo.png"
      style="margin-top: 128px"
    />
    <h3 style="font-size: x-large; margin: 24px 0">
      欢迎使用<%= global.configManager['site.name'] %>
    </h3>
    <div><%= global.configManager['site.name'] %>,每一行代码都足以改变世界</div>
  </div>
</div>

<script
  type="text/javascript"
  src="<%= global.configManager['urls.static'] %>/layui/jquery.min.js"
></script>
<link
  rel="stylesheet"
  href="<%= global.configManager['urls.static'] %>/layui/css/layui.css"
/>
<script
  type="text/javascript"
  src="<%= global.configManager['urls.static'] %>/layui/layui.all.js"
></script>
